  "routing": {
    "security": {
      "patterns": ["auth", "crypto", "secrets", "password", "token", "session", "login", "security"],
      "primaryAI": "gemini",
      "secondaryAI": "codex",
      "riskLevel": "high"
    },
    "architecture": {
      "patterns": ["infra", "architecture", "config", "setup", "docker", "k8s", "core"],
      "primaryAI": "claude",
      "secondaryAI": "codex",
      "riskLevel": "medium"
    },
    "testing": {
      "patterns": ["test", "spec", "mock", "__tests__"],
      "primaryAI": "codex",
      "secondaryAI": "grok",
      "riskLevel": "low"
    },
    "ui": {
      "patterns": ["component", "screen", "widget", "view", "ui", "styles"],
      "primaryAI": "codex",
      "secondaryAI": "claude",
      "riskLevel": "low"
    },
    "data": {
      "patterns": ["model", "schema", "migration", "database", "supabase"],
      "primaryAI": "claude",
      "secondaryAI": "gemini",
      "riskLevel": "medium"
    }
  },
  "orchestration": {
    "confidence": {
      "thresholds": {
        "high-risk": 0.98,
        "medium-risk": 0.95,
        "low-risk": 0.90
      },
      "earlyCutoff": {
        "enabled": true,
        "minAgreement": 2,
        "requireHighPrecisionModel": true
      },
      "scoring": {
        "agreementWeight": 0.5,
        "calibratedConfWeight": 0.3,
        "consistencyWeight": 0.2
      }
    },
    "conflictResolution": {
      "safetyCriticalPatterns": ["auth", "crypto", "secrets", "password", "injection", "xss", "csrf"],
      "evidenceRequired": ["file", "line", "cwe", "exploitPath"],
      "tieBreaker": "block-and-escalate",
      "autoVerification": ["sast", "lint", "test"]
    },
    "timeouts": {
      "perModelMs": 30000,
      "globalMs": 60000,
      "retryAttempts": 2,
      "backoffMultiplier": 1.5
    }
  },
  "findings": {
    "schema": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "required": ["findingId", "sourceAI", "timestamp", "severity", "summary"],
      "properties": {
        "findingId": {"type": "string", "format": "uuid"},
        "requestId": {"type": "string"},
        "sourceAI": {"type": "string", "enum": ["claude", "codex", "gemini", "grok"]},
        "timestamp": {"type": "string", "format": "date-time"},
        "severity": {"type": "string", "enum": ["critical", "warning", "suggestion", "info"]},
        "confidenceScore": {"type": "number", "minimum": 0, "maximum": 1},
        "summary": {"type": "string"},
        "area": {"type": "string"},
        "file": {"type": "string"},
        "line": {"type": "integer"},
        "cwe": {"type": "string"},
        "recommendation": {"type": "string"},
        "evidence": {
          "type": "object",
          "properties": {
            "codeSnippet": {"type": "string"},
            "exploitPath": {"type": "string"},
            "references": {"type": "array", "items": {"type": "string"}}
          }
        }
      }
    },
    "severities": {
      "critical": {"emoji": "X", "label": "CRITICAL", "blocks": true, "requiresEvidence": true},
      "warning": {"emoji": "!", "label": "WARNING", "blocks": false, "requiresEvidence": false},
      "suggestion": {"emoji": "+", "label": "SUGGESTION", "blocks": false, "requiresEvidence": false},
      "info": {"emoji": "i", "label": "INFO", "blocks": false, "requiresEvidence": false}
    }
  },
  "performance": {
    "tracking": {
      "enabled": true,
      "logFile": "ai_performance_log.json",
      "metrics": ["runs", "successes", "failures", "latencyMs", "qualityScore"]
    },
    "routing": {
      "algorithm": "weighted-score",
      "formula": "task_fit * 0.5 + tool_fit * 0.2 + reliability * 0.2 + cost_efficiency * 0.1",
      "adaptiveWeights": true,
      "recalibrationInterval": "weekly"
    }
  },
  "taskTypes": {
    "code-gen": {"description": "Code generation", "defaultAI": "codex"},
    "debugging": {"description": "Bug fixing and debugging", "defaultAI": "codex"},
    "refactor": {"description": "Code refactoring", "defaultAI": "claude"},
    "security": {"description": "Security review", "defaultAI": "gemini"},
    "docs": {"description": "Documentation", "defaultAI": "gemini"},
    "testing": {"description": "Test generation", "defaultAI": "codex"},
    "edge-cases": {"description": "Edge case analysis", "defaultAI": "grok"},
    "architecture": {"description": "Architecture review", "defaultAI": "claude"}
  }
}
